            <menuitem
            name="Pruebas" id="pruebas.menu_root"/>


            <!-- Menu categories -->

            <menuitem name="Pruebas" id="pruebas.pruebas_menu" parent="pruebas.menu_root" action="pruebas.pruebas_action_window"/>


        


